{
    "name": "app-set",
    "version": "1.0.0",
    "description": "",
    "main": "server/app.js",
    "scripts": {
        "start": "npm run tsc & npm run css & npm run html & npm run esbuild & npm run copy-assets & node server/app",
        "build": "npm run css-build & npm run html-build & npm run esbuild-build & npm run copy-assets-build & NODE_ENV=production node server/app",
        "tsc": "tsc -w",
        "css": "sass --watch ./src/sass/:./dev/css/ --style=expanded --source-map",
        "css-build": "sass ./src/sass/:./static/css/ --style=compressed --no-source-map",
        "html": "nodemon --watch src/markup --ext html --exec \"npm run html-minify\"",
        "html-minify": "html-minifier-terser --input-dir src/markup --output-dir dev/html --file-ext html -c html.config.json",
        "html-build": "html-minifier-terser --input-dir src/markup --output-dir static/html --file-ext html -c html.config.json",
        "esbuild": "esbuild dev/scripts/pages/**/index.js --outdir=dev/js --bundle --watch --sourcemap",
        "esbuild-build": "esbuild dev/scripts/pages/**/index.js --outdir=static/js --bundle --minify",
        "copy-assets": "ncp src/assets/ dev/assets/",
        "copy-assets-build": "ncp src/assets/ static/assets/",
        "eslint": "eslint src --ext .ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "jest"
    },
    "author": "thegicode",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.22.9",
        "@babel/preset-env": "^7.22.9",
        "@types/jest": "^29.5.3",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1",
        "babel-jest": "^29.6.2",
        "esbuild": "^0.18.17",
        "eslint": "^8.46.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.9.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-typescript": "^0.14.0",
        "express": "^4.18.2",
        "html-minifier-terser": "^7.2.0",
        "jest": "^29.6.2",
        "jest-environment-jsdom": "^29.6.2",
        "ncp": "^2.0.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.0",
        "sass": "^1.64.2",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    }
}
