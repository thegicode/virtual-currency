{
    "name": "app-set",
    "version": "1.0.0",
    "description": "",
    "main": "server/app.js",
    "scripts": {
        "start": "npm run tsc & npm run css & npm run html & npm run esbuild & npm run copy-assets & node server/app",
        "trade": "node trade",
        "invest": "node backend/dist/investing",
        "strategies": "node backend/dist/investing/strategies",
        "backtest": "node backend/dist/investing/backtest",
        "build": "npm run css-build & npm run html-build & npm run esbuild-build & npm run copy-assets-build & NODE_ENV=production node server/app",
        "tsc": "tsc -w & tsc --project ./backend -w",
        "css": "sass --watch ./app/sass/:./dev/css/ --style=expanded --source-map",
        "css-build": "sass ./app/sass/:./static/css/ --style=compressed --no-source-map",
        "html": "nodemon --watch app/markup --ext html --exec \"npm run html-minify\"",
        "html-minify": "html-minifier-terser --input-dir app/markup --output-dir dev/html --file-ext html -c html.config.json",
        "html-build": "html-minifier-terser --input-dir app/markup --output-dir static/html --file-ext html -c html.config.json",
        "esbuild": "esbuild dev/scripts/pages/**/index.js --outdir=dev/js --bundle --watch --sourcemap",
        "esbuild-build": "esbuild dev/scripts/pages/**/index.js --outdir=static/js --bundle --minify",
        "copy-assets": "ncp app/assets/ dev/assets/",
        "copy-assets-build": "ncp app/assets/ static/assets/",
        "eslint": "eslint app --ext .ts",
        "format": "prettier --write \"app/**/*.ts\"",
        "test": "vitest"
    },
    "author": "thegicode",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.22.9",
        "@babel/preset-env": "^7.22.9",
        "@types/express": "^4.17.21",
        "@typescript-eslint/eslint-plugin": "^6.2.1",
        "@typescript-eslint/parser": "^6.2.1",
        "babel-preset-es2015": "^6.24.1",
        "babel-register": "^6.26.0",
        "chai": "^5.0.3",
        "crypto": "^1.0.1",
        "esbuild": "^0.18.17",
        "eslint": "^8.46.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.9.0",
        "eslint-plugin-prettier": "^5.0.0",
        "eslint-plugin-typescript": "^0.14.0",
        "express": "^4.18.2",
        "html-minifier-terser": "^7.2.0",
        "jsonwebtoken": "^9.0.2",
        "mocha": "^10.3.0",
        "ncp": "^2.0.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.0",
        "sass": "^1.64.2",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6",
        "uuid": "^9.0.1",
        "vitest": "^1.6.0"
    }
}
